<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leituras"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="safetyfloat.sf_safetyfloat.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_leituras"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tb_leituras"
        android:layout_marginTop="30dip">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:text="Horario/Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/col_data"
                android:layout_marginBottom="@dimen/tb_cells_margin_bottom"
                android:padding="@dimen/tb_leituras_padding"
                android:background="@drawable/cell_header_shape"
                android:width="@dimen/tb_header_horario_width"/>
            <TextView
                android:text="Medição"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/col_medicao"
                android:layout_marginBottom="@dimen/tb_cells_margin_bottom"
                android:padding="@dimen/tb_leituras_padding"
                android:background="@drawable/cell_header_shape"
                android:width="@dimen/tb_header_medicao_width"/>
            <TextView
                android:text="Nível de Alerta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/col_nv_alerta"
                android:layout_marginBottom="@dimen/tb_cells_margin_bottom"
                android:padding="@dimen/tb_leituras_padding"
                android:background="@drawable/cell_header_shape"
                android:width="@dimen/tb_header_alerta_width"/>
        </TableRow>
    </TableLayout>
</LinearLayout>